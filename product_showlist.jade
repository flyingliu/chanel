extends ./layout.jade

block content
    #product
        .header
            a.prev(href="main_index.html") 返回首页       
            a.next(href="#" @click="showfilter") 筛选

        .productlist(:class="{nodata:isnodata}")
            ul
                li(v-for="item in list" v-if="item.productList.length>0")
                    h5 {{item.name}}
                    div
                        a(:href="'product_detail.html?pid='+v.id" v-for="v in item.productList" ) 
                            img(:src="v.defaultImg", alt="")

        .filter
            ul  
                li.active
                    h5(@click="activeitem($event)") hobo
                    div
                        span(@click="getfilter(1,1)") 小号
                        span(@click="getfilter(1,2)") 中号
                        span(@click="getfilter(1,3)") 大号

                li 
                    h5(@click="activeitem($event)") backpack  
                    div 
                        span(@click="getfilter(2,1)") 小号
                        span(@click="getfilter(2,2)") 中号
                        span(@click="getfilter(2,3)") 大号                
                li 
                    h5(@click="activeitem($event)") shopping 

                    div 
                        span(@click="getfilter(3,1)") 小号
                        span(@click="getfilter(3,2)") 中号
                        span(@click="getfilter(3,3)") 大号                
                li 
                    h5(@click="activeitem($event)") purse
                    div 
                        span(@click="getfilter(4,1)") 小号
                        span(@click="getfilter(4,2)") 中号
                        span(@click="getfilter(4,3)") 大号                
            h3(@click="getfilter(0)") 显示所有 
